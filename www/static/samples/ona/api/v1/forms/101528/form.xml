<?xml version="1.0" encoding="utf-8"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Edit Person</h:title>
    <model>
      <instance>
        <person-edit id="person_1" version="2015-11-11">
          <formhub>
            <uuid/>
          </formhub>
          <person>
            <type>person</type>
            <parent/>
            <name/>
            <date_of_birth/>
            <date_of_birth_method/>
            <sex/>
            <notes/>
            <phone/>
            <alternate_phone/>
          </person>
          <meta>
            <instanceID/>
          </meta>
        </person-edit>
      </instance>
      <bind nodeset="/person-edit/person/type" type="string"/>
      <bind nodeset="/person-edit/person/parent" type="string"/>
      <bind nodeset="/person-edit/person/name" required="true()" type="string"/>
      <bind nodeset="/person-edit/person/date_of_birth" type="date"/>
      <bind nodeset="/person-edit/person/date_of_birth_method" type="select1"/>
      <bind nodeset="/person-edit/person/sex" type="select1"/>
      <bind nodeset="/person-edit/person/notes" type="string"/>
      <bind nodeset="/person-edit/person/phone" type="string"/>
      <bind nodeset="/person-edit/person/alternate_phone" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/person-edit/meta/instanceID" readonly="true()" type="string"/>
      <bind calculate="'00fd62b19cb248cc9d7e6461e77d9cc1'" nodeset="/person-edit/formhub/uuid" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group ref="/person-edit/person">
      <input appearance="hidden" ref="/person-edit/person/type">
        <label>Person Type</label>
        <hint>mandatory</hint>
      </input>
      <input appearance="hidden db-object" ref="/person-edit/person/parent">
        <label>Parent</label>
      </input>
      <input ref="/person-edit/person/name">
        <label>Names</label>
      </input>
      <input ref="/person-edit/person/date_of_birth">
        <label>Date of Birth</label>
      </input>
      <select1 appearance="hidden" ref="/person-edit/person/date_of_birth_method">
        <label>Method to select date of birth</label>
        <item>
          <label>Date unknown</label>
          <value>approx</value>
        </item>
      </select1>
      <select1 appearance="horizontal" ref="/person-edit/person/sex">
        <label>Gender</label>
        <item>
          <label>Female</label>
          <value>female</value>
        </item>
        <item>
          <label>Male</label>
          <value>male</value>
        </item>
      </select1>
      <input ref="/person-edit/person/notes">
        <label>Notes (optional)</label>
      </input>
      <input appearance="numbers" ref="/person-edit/person/phone">
        <label>Primary Mobile Number</label>
      </input>
      <input appearance="numbers" ref="/person-edit/person/alternate_phone">
        <label>Secondary Mobile Number</label>
      </input>
    </group>
  </h:body>
</h:html>
